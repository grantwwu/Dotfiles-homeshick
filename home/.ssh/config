# .ssh/config
Host *
    # automatically share a connection through a socket
    ControlMaster auto
    # create the socket at a global path
    ControlPath /tmp/%r@%h:%p
    # leave the connection open after the last shell closes for 5 seconds
    ControlPersist 5s

Host aws_personal
    IdentityFile ~/.ssh/id_rsa_yoga2pro_debian
    User admin

Host *.thetartan
    CanonicalizeHostname yes
    CanonicalDomains org
Host thetartan
    CanonicalizeHostname yes
    CanonicalDomains org
Host files.thetartan.org
    User grantwu
    IdentityFile ~/.ssh/id_rsa_yoga2pro_debian
Host *.thetartan.org
    User admin
    IdentityFile ~/.ssh/id_rsa_yoga2pro_debian
Host thetartan.org
    User admin
    IdentityFile ~/.ssh/id_rsa_yoga2pro_debian

Host *.club
    CanonicalizeHostname yes
    CanonicalDomains cc.cmu.edu

Host *.club.cc.cmu.edu
    # try to authenticate using kerberos tickets
    GSSAPIAuthentication yes
    # forward any forwardable tickets to the remote shell
    GSSAPIDelegateCredentials yes

Host unix*
    CanonicalizeHostname yes
    CanonicalDomains andrew.cmu.edu

Host unix*.andrew.cmu.edu
    # try to authenticate using kerberos tickets
    GSSAPIAuthentication yes
    # forward any forwardable tickets to the remote shell
    GSSAPIDelegateCredentials yes

Host ghc*
    CanonicalizeHostname yes
    CanonicalDomains ghc.andrew.cmu.edu

Host *.ghc.andrew.cmu.edu
    # try to authenticate using kerberos tickets
    GSSAPIAuthentication yes
    # forward any forwardable tickets to the remote shell
    GSSAPIDelegateCredentials yes

Host *shark
    CanonicalizeHostname yes
    CanonicalDomains ics.cs.cmu.edu
